<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import org.gamefolk.roomfullofcats.Ad?>
<?import java.net.URL?>
<BorderPane fx:id="root" styleClass="root"
           fx:controller="org.gamefolk.roomfullofcats.GameController"
           xmlns:fx="http://javafx.com/fxml">
  <top>
    <BorderPane fx:id="scoreView" styleClass="scoreView" visible="false">
      <left>
        <Text fx:id="time" />
      </left>
      <right>
        <Text fx:id="score" />
      </right>
    </BorderPane>
  </top>
  <center>
    <StackPane onMouseClicked="#handleInput">
      <Pane fx:id="gameView">
        <Canvas fx:id="canvas"/>
      </Pane>
      <BorderPane>
        <center>
          <VBox alignment="CENTER">
            <Text fx:id="title" textAlignment="CENTER"/>
            <Text fx:id="message" textAlignment="CENTER"/>
          </VBox>
        </center>
     </BorderPane>
    </StackPane>
  </center>
  <bottom>
    <Ad />
  </bottom>
  <stylesheets>
    <URL value="@styles/game.css" />
  </stylesheets>
</BorderPane>
